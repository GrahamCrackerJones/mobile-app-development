<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="mobappdev.lecture13.ComicFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_view_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        tools:hint="Series Name"/>

    <TextView
        android:id="@+id/text_view_volume_and_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_series"
        tools:hint="Volume and Number"
        android:gravity="center"
        />

    <View
        android:id="@+id/view_separator_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/text_view_volume_and_number"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />

    <CheckBox
        android:id="@+id/check_box_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator_top"
        android:text="Owned"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/view_separator_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/check_box_owned"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />

    <TextView
        android:id="@+id/text_view_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator_bottom"
        tools:hint="Notes"
        />

</RelativeLayout>
