<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".Lecture06Activity">

    <TextView
        android:id="@+id/text_view_bank"
        android:text="@string/label_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/horizontal_rule_01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/text_view_bank"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/text_view_name"
        android:text="@string/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_below="@id/horizontal_rule_01"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/horizontal_rule_02"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/text_view_name"
        android:background="#CCCCCC"
        />

    <TextView
        android:id="@+id/text_view_checking"
        android:text="CHECKING $123.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@id/horizontal_rule_02"
        android:background="#AAAAAA"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_view_savings"
        android:text="SAVINGS $22.75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@id/text_view_checking"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/horizontal_rule_03"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/text_view_savings"
        android:background="#CCCCCC"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_rule_03"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="09/14/2015 Withdrawal $150 Balance $123.00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#CCCCCC"
            android:text="09/14/2015 Withdrawal $150 Balance $123.00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="09/14/2015 Withdrawal $150 Balance $123.00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#CCCCCC"
            android:text="09/14/2015 Withdrawal $150 Balance $123.00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="09/14/2015 Withdrawal $150 Balance $123.00"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_logout"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_help"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
