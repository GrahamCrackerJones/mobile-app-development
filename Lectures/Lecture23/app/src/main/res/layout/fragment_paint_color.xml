<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="mobappdev.lecture23.paintr.PaintColorFragment">

    <View
        android:id="@+id/swatch_red"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/red"
    />

    <View
        android:id="@+id/swatch_orange"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/orange"
    />

    <View
        android:id="@+id/swatch_yellow"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/yellow"
    />

    <View
        android:id="@+id/swatch_green"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/green"
    />

    <View
        android:id="@+id/swatch_blue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/blue"
    />

    <View
        android:id="@+id/swatch_purple"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/purple"
    />

    <View
        android:id="@+id/swatch_brown"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/brown"
    />

    <View
        android:id="@+id/swatch_black"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/black"
    />

    <View
        android:id="@+id/swatch_white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@color/white"
    />

</LinearLayout>

