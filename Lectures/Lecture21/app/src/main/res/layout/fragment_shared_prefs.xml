<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobappdev.lecture21.sharedprefs.SharedPrefsFragment">

    <EditText
        android:id="@+id/edit_text_shared_prefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/hint_shared_prefs"/>

    <EditText
        android:id="@+id/edit_text_bundle_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/hint_store_in_bundle"
        android:layout_below="@id/edit_text_shared_prefs"/>

</RelativeLayout>
