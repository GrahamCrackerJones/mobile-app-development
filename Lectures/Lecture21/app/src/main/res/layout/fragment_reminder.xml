<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobappdev.lecture21.reminder.ReminderFragment">

    <EditText
        android:id="@+id/edit_text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_wait_time"
        android:gravity="center"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_time"
        android:gravity="center"
        android:hint="@string/hint_message"/>

    <Button
        android:id="@+id/button_create_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_create_reminder"
        android:layout_below="@id/edit_text_message"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
