<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobappdev.lecture23.paintr.PaintrFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_line"
            android:contentDescription="@string/draw_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_line"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_squiggle"
            android:contentDescription="@string/pencil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_squiggle"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_stroke"
            android:contentDescription="@string/paint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_stroke"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_circle"
            android:contentDescription="@string/draw_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_circle"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_rectangle"
            android:contentDescription="@string/draw_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_rectangle"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_fill"
            android:contentDescription="@string/fill_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_fill"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_erase_all"
            android:contentDescription="@string/erase_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_trash"
            android:scaleType="center"
            android:padding="2dp"
        />

        <ImageView
            android:id="@+id/iv_undo"
            android:contentDescription="@string/undo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_undo"
            android:scaleType="center"
            android:padding="2dp"
        />

    </LinearLayout>

    <mobappdev.lecture23.paintr.Surface
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/cream"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/swatch_red"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/red"

            />

        <View
            android:id="@+id/swatch_orange"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/orange"
            />

        <View
            android:id="@+id/swatch_yellow"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            />

        <View
            android:id="@+id/swatch_green"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/green"
            />

        <View
            android:id="@+id/swatch_blue"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/blue"
            />

        <View
            android:id="@+id/swatch_purple"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/purple"
            />

        <View
            android:id="@+id/swatch_brown"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/brown"
            />

        <View
            android:id="@+id/swatch_black"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/black"
            />

        <View
            android:id="@+id/swatch_white"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            />






    </LinearLayout>
</LinearLayout>
