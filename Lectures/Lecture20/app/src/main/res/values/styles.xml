<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buttercup_brown</item>
        <item name="colorPrimaryDark">@color/buttercup_black</item>
        <item name="colorAccent">@color/buttercup_white</item>
        <item name="android:buttonStyle">@style/ButtercupButton</item>
        <item name="android:colorBackground">@color/buttercup_light_brown</item>
    </style>

    <style name="ButtercupButton">
        <item name="android:background">@drawable/buttercup_button</item>
        <item name="android:textColor">@color/buttercup_white</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
