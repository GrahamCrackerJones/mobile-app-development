<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Themin" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/rusty_orange</item>
        <item name="colorAccent">@color/canary_yellow</item>
        <item name="android:colorBackground">@color/canary_yellow</item>
    </style>

    <style name="StylinTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StylinTextView.StylinEditText">
        <item name="android:textColor">@color/fire_engine_red</item>
    </style>

    <style name="StylinButton">
        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
